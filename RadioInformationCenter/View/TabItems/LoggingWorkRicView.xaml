                </dxg:GridControl.Columns>

                <dxg:GridControl.View>
                    <dxg:TableView ShowColumnHeaders="True" ShowGroupPanel="False" AllowPerPixelScrolling="True" ShowTotalSummary="True">
                    </dxg:TableView>
                </dxg:GridControl.View>
            </dxg:GridControl>-->

            <StackPanel Grid.Column="0" Grid.Row="1">
                <Button Content="{x:Static localization:Resources.ID_CAPTION_Apply}" Margin="5" Command="{Binding Path=LoadRicMessageCommand}"></Button>
            </StackPanel>
        </Grid>

